<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/hintUserId"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editTextReadingDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/hintReadingDate"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserId"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextReadingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/hintReadingDate"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editTextReadingDate"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextSystolicReading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/hintSystolicReading"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editTextReadingTime"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextDiastolicReading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="@string/hintDiastolicReading"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editTextSystolicReading"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/hintCondition"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@+id/editTextDiastolicReading"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonAddReading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/btnAddReading"
        app:layout_constraintTop_toBottomOf="@+id/editTextCondition"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/buttonGoToReadings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Go to readings"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddReading"
        tools:layout_editor_absoluteX="-16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>